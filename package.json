{
  "name": "offsydeb",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "./start.sh",
    "start:direct": "bun run index.ts",
    "build": "bun build index.ts --outdir ./dist",
    "playwright:install": "npx playwright install chromium --with-deps",
    "postinstall": "npx playwright install chromium --with-deps",
    "docker:build": "docker build -t offsydeb .",
    "docker:run": "docker run -p 4000:4000 offsydeb",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop offsydeB-api",
    "pm2:restart": "pm2 restart offsydeB-api"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "playwright": "^1.55.0"
  }
}
